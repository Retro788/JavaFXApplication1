<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.controller.AddReviewController">
    <children>
        <VBox spacing="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>
                <MenuBar fx:id="myMenuBar">
                    <menus>
                        <Menu mnemonicParsing="false" text="Archivo">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Cerrar" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Navegación">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleBack" text="Volver" />
                                <MenuItem mnemonicParsing="false" onAction="#logoutButtonAction" text="Cerrar sesión" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                
                <Label text="Añadir Nueva Reseña" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Cita:" GridPane.rowIndex="0" />
                        <ComboBox fx:id="cbAppointment" promptText="Seleccione una cita" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Calificación:" GridPane.rowIndex="1" />
                        <HBox spacing="10.0" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <RadioButton fx:id="rb1" mnemonicParsing="false" text="1" toggleGroup="$ratingGroup" />
                                <RadioButton fx:id="rb2" mnemonicParsing="false" text="2" toggleGroup="$ratingGroup" />
                                <RadioButton fx:id="rb3" mnemonicParsing="false" text="3" toggleGroup="$ratingGroup" />
                                <RadioButton fx:id="rb4" mnemonicParsing="false" text="4" toggleGroup="$ratingGroup" />
                                <RadioButton fx:id="rb5" mnemonicParsing="false" text="5" toggleGroup="$ratingGroup" selected="true" />
                            </children>
                        </HBox>
                        
                        <Label text="Comentario:" GridPane.rowIndex="2" />
                        <TextArea fx:id="taComment" promptText="Ingrese su comentario sobre la cita" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
                
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label fx:id="lblStatus" textFill="RED" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnClear" mnemonicParsing="false" onAction="#onClear" text="Limpiar" />
                        <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBack" text="Volver" />
                        <Button fx:id="btnSave" defaultButton="true" mnemonicParsing="false" onAction="#onSave" text="Guardar" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
    
    <fx:define>
        <ToggleGroup fx:id="ratingGroup" />
    </fx:define>
</AnchorPane>