<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.controller.ReviewListController">
    <children>
        <VBox spacing="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>
                <MenuBar fx:id="myMenuBar">
                    <menus>
                        <Menu mnemonicParsing="false" text="Archivo">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Cerrar" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Navegación">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleBack" text="Volver" />
                                <MenuItem mnemonicParsing="false" onAction="#logoutButtonAction" text="Cerrar sesión" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Lista de Reseñas" style="-fx-font-size: 20px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS" />
                        <Label text="Filtrar por calificación:" />
                        <ComboBox fx:id="cbRatingFilter" promptText="Todas" />
                        <Button fx:id="btnFilter" mnemonicParsing="false" onAction="#onFilter" text="Filtrar" />
                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onAdd" text="Nueva Reseña" />
                    </children>
                </HBox>
                
                <TableView fx:id="tableReviews" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colAppointmentId" prefWidth="100.0" text="ID Cita" />
                        <TableColumn fx:id="colRating" prefWidth="80.0" text="Calificación" />
                        <TableColumn fx:id="colComment" prefWidth="300.0" text="Comentario" />
                        <TableColumn fx:id="colCreatedAt" prefWidth="120.0" text="Fecha" />
                        <TableColumn fx:id="colEdit" prefWidth="70.0" text="Editar" />
                        <TableColumn fx:id="colDelete" prefWidth="70.0" text="Eliminar" />
                    </columns>
                </TableView>
                
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label fx:id="lblStatus" textFill="RED" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#onRefresh" text="Actualizar" />
                        <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBack" text="Volver" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>